{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Customer Journey Mapper Input",
  "type": "object",
  "required": ["market_description"],
  "properties": {
    "market_description": {
      "type": "string",
      "description": "Natural language description of the niche market",
      "minLength": 10,
      "examples": [
        "Eco-conscious millennials interested in sustainable fashion",
        "Small business owners looking for accounting software solutions",
        "Healthcare professionals seeking telemedicine platforms"
      ]
    },
    "industry": {
      "type": "string",
      "description": "Industry category for the market",
      "enum": [
        "ecommerce",
        "saas",
        "healthcare",
        "finance",
        "education",
        "retail",
        "manufacturing",
        "consulting",
        "media",
        "other"
      ]
    },
    "target_demographics": {
      "type": "object",
      "description": "Target customer demographics",
      "properties": {
        "age": {
          "type": "string",
          "examples": ["18-25", "26-35", "36-45", "46-55", "55+"]
        },
        "location": {
          "type": "string",
          "examples": ["Global", "North America", "Europe", "Urban areas", "Rural areas"]
        },
        "occupation": {
          "type": "string",
          "examples": ["Students", "Professionals", "Entrepreneurs", "Retirees"]
        },
        "income": {
          "type": "string",
          "examples": ["<$30k", "$30k-$60k", "$60k-$100k", "$100k+"]
        }
      }
    },
    "product_service": {
      "type": "string",
      "description": "What product or service is being offered",
      "examples": [
        "Sustainable clothing subscription",
        "Cloud-based accounting software",
        "Telemedicine consultation platform"
      ]
    },
    "business_model": {
      "type": "string",
      "description": "Business model type",
      "enum": ["B2B", "B2C", "B2B2C", "marketplace", "subscription", "freemium"]
    },
    "input_content_type": {
      "type": "string",
      "description": "MIME type of the input content",
      "enum": ["text/markdown", "application/json", "text/plain"],
      "default": "text/plain"
    },
    "brand_token": {
      "type": "string",
      "description": "Brand configuration token for tone and compliance",
      "pattern": "^[a-zA-Z0-9_-]+$"
    }
  },
  "additionalProperties": false
}