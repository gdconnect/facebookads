{
  "$id": "https://example.com/article-outline/schema.output.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Article → Outline: Output",
  "type": "object",
  "additionalProperties": false,
  "required": ["meta", "outline"],
  "properties": {
    "meta": {
      "type": "object",
      "additionalProperties": false,
      "required": ["content_type", "detected_language", "depth"],
      "properties": {
        "content_type": { "type": "string", "enum": ["article", "story"] },
        "detected_language": { "type": "string" },
        "depth": { "type": "integer", "minimum": 1, "maximum": 6 },
        "sections_count": { "type": "integer", "minimum": 0 },
        "generated_at": {
          "type": "string",
          "format": "date-time",
          "description": "ISO 8601 timestamp of outline generation."
        },
        "notes": { "type": "string" }
      }
    },
    "outline": {
      "type": "array",
      "items": { "$ref": "#/$defs/section" }
    }
  },
  "$defs": {
    "section": {
      "type": "object",
      "additionalProperties": false,
      "required": ["title"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Stable slug/id (e.g., 'introduction')."
        },
        "level": {
          "type": "integer",
          "minimum": 1,
          "maximum": 6,
          "default": 1,
          "description": "Heading level (1 = H1, 2 = H2, ...)."
        },
        "title": { "type": "string", "minLength": 1 },
        "summary": {
          "type": "string",
          "description": "1–3 sentence synopsis of this section."
        },
        "key_points": {
          "type": "array",
          "items": { "type": "string" },
          "description": "Bullet points to cover under this section."
        },
        "word_count_estimate": {
          "type": "integer",
          "minimum": 0,
          "description": "Optional rough word budget for this section."
        },
        "subsections": {
          "type": "array",
          "items": { "$ref": "#/$defs/section" },
          "description": "Nested sections (increase level by 1 each depth)."
        }
      }
    }
  }
}
